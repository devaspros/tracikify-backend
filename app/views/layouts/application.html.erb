<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <header class="navbar sticky-top bg-dark flex-md-nowrap p-0 shadow justify-content-md-start">
      <%=
        link_to "Puntapie",
        root_path,
        class: "navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6 text-white"
      %>

      <!-- Este es el menú de navegación cuando se está en pantallas pequeñas -->
      <ul class="navbar-nav flex-row d-md-none">
        <li class="nav-item text-nowrap">
          <button class="nav-link px-3 text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
            <i class="fas fa-bars"></i>
          </button>
        </li>
      </ul>
    </header>

    <div class="container-fluid">
      <div class="row">
        <%= render 'shared/sidebar' %>

        <main class="col-sm-12 col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

            <%= yield(:section_title) %>

            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group me-2">
                <%= yield(:shortcut) %>
              </div>
            </div>
          </div>

          <%= render 'shared/notices' %>

          <%= yield %>
        </main>

      </div>
    </div>
  </body>
</html>
